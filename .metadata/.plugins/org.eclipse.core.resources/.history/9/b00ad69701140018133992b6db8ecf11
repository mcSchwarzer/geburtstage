package birthdayProjectV2;

import java.time.ZoneId;
import java.time.ZonedDateTime;

public class Person {

	private String fname;
	private String sname;
	private ZonedDateTime birthday;
	private int age;
	private int phonenb;
	String email;
	
	public Person(String fname){
		this.fname = fname;
	}
	public Person(String fname, String sname,ZonedDateTime bd, int pnb, String email){
		this.fname = fname;
		this.sname = sname;
		this.birthday = bd;
		this.phonenb = pnb;
		this.email = email;
	}

	private int calcAge(ZonedDateTime bd){
		if(bd.equals(null)){
			return 100;
		}
		
		int i = (int) (System.currentTimeMillis()/100*60*60*24*365);
		return (bd.getYear() - i);
		
	}
	
	
	public static void main (String [] args){
		ZoneId zid = ZoneId.systemDefault();
		ZonedDateTime a = ZonedDateTime.of(1950, 2, 4, 0, 0, 0, 0, zid);
		
		System.out.println(a.toString());
		System.out.println(zid);
		System.out.println( System.currentTimeMillis()/(1000*60*60*24*365));
	}
}
