package birthdayProjectV2;

import java.time.ZoneId;
import java.time.ZonedDateTime;
import java.util.HashMap;
import java.util.TreeSet;
import java.util.concurrent.ThreadLocalRandom;

public class PersonList {

	private TreeSet<Person> personSet = new TreeSet<Person>();
	
	public PersonList(){
		
	}
	public PersonList(TreeSet<Person> set){
		this.personSet = set;
	}
	
	public boolean insert (){
		
		return false;
	}

	
	
	
	
	
	
	
	
	
	
	
	

	
	
	
	public static void main(String [] args){
		ZonedDateTime zdt = ZonedDateTime.of(1998, 4, 5, 0, 0, 0, 0, ZoneId.systemDefault());
		Person a = new Person("Markus", "Josua Schwarzer", 1752375649, "markus.schwarzer@hotmail.de", zdt);
		
		System.out.println("hat gb " + a.hasBirthday());
		System.out.println("tage bis gb " + a.getDaysTillBirthday());
		System.out.println(a.getAge());
		
		long l = 524362362;
		System.out.println((int) l);
		
		PersonList pl = new PersonList();
		
		for(int i = 0; i < 100000; i++){
			int year = ThreadLocalRandom.current().nextInt(1940, (2017 + 1));
			int month = ThreadLocalRandom.current().nextInt(1, (12 + 1));
			int day = ThreadLocalRandom.current().nextInt(1, (28 + 1));
			
			
			ZonedDateTime bday = ZonedDateTime.of(year, month, day, 0, 0, 0, 0, ZoneId.systemDefault());
			Person per = new Person(("Vorname" + Integer.toString(i)), "Nachname" + Integer.toString(i), i, Integer.toString(i) + "@gmx.de", zdt);
			pl.personSet.add(per);
		}
		
		for(Person p : pl.personSet){
			System.out.println(p.getFname() + ", " + p.getDayOfBirth());
		}

	}
}
