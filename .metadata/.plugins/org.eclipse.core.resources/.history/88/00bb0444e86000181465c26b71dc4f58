package xml;

import xml.BDPC;

import java.io.File;
import java.io.PrintStream;

import javax.xml.bind.JAXBContext;
import javax.xml.bind.JAXBException;
import javax.xml.bind.Unmarshaller;


public class XmlOps implements Commons{

	public static BDPC readXmlInput(PrintStream ps) throws JAXBException{
		long timer = System.currentTimeMillis();
		File file = new File(XmlInputPath);
		JAXBContext jaxbContext = JAXBContext.newInstance(BDPC.class);
		Unmarshaller jaxbUnmarshaller = jaxbContext.createUnmarshaller();
		BDPC bdpc = (BDPC) jaxbUnmarshaller.unmarshal(file);

		Commons.writeSth(("INFO\t xml_read(\"" + XmlInputPath + "\") [" 
		+ (System.currentTimeMillis() - timer + " ms]")),ps);
		
		return bdpc;
	}



}
